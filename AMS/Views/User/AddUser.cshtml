@{
    ViewBag.Title = "Add User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AddUser", "User"))
{
<div class="sidemenu_head" style="font-size:20px;font-weight:bold;">Add New User</div>
                            <div class="sidemenu">

Title :<select id="selectTitle" name="Title">
    <option>Mr.</option>
    <option>Mrs.</option>
    <option>Miss.</option>
</select><br /><br />
<div>User Name : <input id="txtUserName" name="UserName" type="text" /> </div><br /><br />
<div>Password : <input id="txtPassword" name="Password" type="password" /></div><br /><br />
Re enter Password : <input id="txtRePassword" name="RePassword" type="password" /><br /><br />
First Name :<input id="txtFirstName" name="FirstName" type="text" /><br /><br />
Last Name :<input id="txtLastName" name="LastName" type="text" /><br /><br />
Phone:<input id="txtPhone" name="Phone" type="text" /><br /><br />
          
Email:<input id="txtEmail" name="Email" type="text" /><br /><br />
Description :<textarea id="txtDesc" name="Desc" cols="20" rows="2"></textarea><br /><br />
Status :<select id="selectStatus" name="Status">
    <option>Active</option>
    <option>In-Active</option>
</select><br /><br />
<input id="Submit1" type="submit" value="submit" />
</div>
}