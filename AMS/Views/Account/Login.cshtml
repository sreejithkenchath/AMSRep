@model AMS.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
<!doctype html>
<html>
<head>
<meta charset="utf-8">
    <title>APMS</title>

    <link rel="icon" href="faviconya.ico" type="image/x-icon" />
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/main.css")" rel="stylesheet" type="text/css" />
 
     <script src="<%= Url.Content("~/Content/js/jquery.min.js") %>" type="text/javascript"></script>
   
    <!--[if lt IE 9]>
    <script src="js/html5.js"></script>
    <![endif]-->
</head>
<body>
 <br/><br/><br/><br/><br/>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <section id="LoginForm">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
            <div class="col-md-6 ">
                <div class="login_wrapper">
                    <div class="login_head">
                        <div class="glyphicon glyphicon-user"></div>
                        <h3>LOGIN</h3>
                    </div>

                    <div class="login_content pull-left">
                        <div class="clearfix">&nbsp;</div>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                             @Html.TextBoxFor(m => m.UserName, new { @class = "textbox", @placeholder = "User Name" })
                             </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                        
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                
                                @Html.PasswordFor(m => m.Password, new { @class = "textbox", @placeholder = "Password" })
                                </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="clearfix">&nbsp;</div>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-5">
                            <input type="submit" value="Login" class="btn btn-success login_btn" />
                                                         
                        </div>
                                                        <div class="col-md-5">
                                                         
                                <button class="btn btn-danger login_btn">Clear</button>                            
                        </div>
                            <div class="col-md-1"></div>
                    </div>
                        <div class="clearfix">&nbsp;</div>
                        <div class="row">
                            <p class="frgt_pw">Forgot Password? <a href="#">Click Here to Reset</a></p>
                        </div>

                </div>

                    <div class="new_reg_panel">
                        
                        <p>@Html.ActionLink("Click Here for New Registration","Index","Customer")</p>
                    </div>


            </div>
            <div class="col-md-3"></div>
        </div>
              
  
     
     
}
</section>
      <script src="<%= Url.Content("~/Content/js/bootstrap.min.js") %>" type="text/javascript"></script>
         
</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
